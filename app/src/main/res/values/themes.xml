<resources>
    <!-- Base application theme. -->
    <style name="Theme.LoyaltyJuggernautProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorPrimaryVariant">#FFBB86FC</item>
        <item name="colorPrimary">#FF6200EE</item>
        <item name="colorPrimaryDark">#FF3700B3</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>